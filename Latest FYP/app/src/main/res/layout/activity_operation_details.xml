<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choonket.fyp.operationDetails">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:layout_below="@+id/shopName"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etMondayST" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:layout_below="@+id/etThursdayST"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:layout_below="@+id/etWednesdayST"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etTuesdayST" />

    <EditText
        android:id="@+id/etMondayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Monday"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etWednesdayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView20"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etMondayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etMondayST"
        android:layout_alignBottom="@+id/etMondayST"
        android:layout_toEndOf="@+id/etMondayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etTuesdayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Tuesday"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etThursdayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Thursday"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp"
        tools:textSize="12sp" />

    <EditText
        android:id="@+id/etFridayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp"
        tools:textSize="12sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etFridayST"
        android:text="Saturaday" />

    <EditText
        android:id="@+id/etSaturdayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSaturdayST"
        android:text="Sunday" />

    <EditText
        android:id="@+id/etSundayST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView25"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etTuesdayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etTuesdayST"
        android:layout_alignBottom="@+id/etTuesdayST"
        android:layout_toEndOf="@+id/etTuesdayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etWednesdayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etWednesdayST"
        android:layout_alignBottom="@+id/etWednesdayST"
        android:layout_toEndOf="@+id/etWednesdayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etThursdayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etThursdayST"
        android:layout_toEndOf="@+id/etThursdayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etFridayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etFridayST"
        android:layout_toEndOf="@+id/etFridayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etSaturdayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etSaturdayST"
        android:layout_toEndOf="@+id/etSaturdayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etSundayET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etSundayST"
        android:layout_alignBottom="@+id/etSundayST"
        android:layout_toEndOf="@+id/etSundayST"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/textView24"
        android:onClick="buttonOnClick"
        android:text="Confirm" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etMondayET"
        android:layout_alignTop="@+id/button4"
        android:onClick="buttonOnClick2"
        android:text="Duplicate !" />

</RelativeLayout>
